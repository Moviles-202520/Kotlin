<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_detail_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/news_placeholder"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background" />

        <!-- Title -->
        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NASA confirms water on the Moon"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent satellite scans reveal water deposits on the Moon's surface. This could mark a new era of space exploration and colonization."
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="16dp" />

        <!-- Comments Count -->
        <TextView
            android:id="@+id/comments_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="56 comments"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Comments List -->
        <LinearLayout
            android:id="@+id/comments_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <!-- Example Comment (repeat dynamically in code) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ John Doe: Amazing discovery!"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Add more dynamically via code -->
        </LinearLayout>

        <!-- Write Comment Section -->
        <LinearLayout
            android:id="@+id/comment_input_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="8dp">

            <EditText
                android:id="@+id/comment_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Write a comment..."
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/medium_gray"
                android:background="@android:color/transparent"
                android:padding="8dp" />

            <Button
                android:id="@+id/publish_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publish"
                android:textAllCaps="false"
                android:backgroundTint="@color/green_point"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:minWidth="80dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
